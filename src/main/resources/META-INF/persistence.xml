<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="s3l4-gestione-eventipu">
        <!-- Il nome della Persistence Unit Ã¨ importante perchÃ© nel codice Java dovremo richiamarla per nome-->

        <!-- elenco delle entities-->
        <class>gentjanahani.entities.Evento</class>
        <class>gentjanahani.entities.Persona</class>
        <class>gentjanahani.entities.Partecipazione</class>
        <class>gentjanahani.entities.Location</class>


        <properties>
            <!--Nome del database creato prima-->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/s3l4-gestione-eventi"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <!--Impostazione che serve a creare e aggiornare le tabelle in automatico -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>
</persistence>